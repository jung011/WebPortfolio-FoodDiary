{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./src",
    "lib":[
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop":true,
    "allowSyntheticDefaultImports":true,
    "noFallthroughCasesInSwitch": true,
    "module" : "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx" : "react-jsx",
  },
  "include": [
    "src",
  ]
}